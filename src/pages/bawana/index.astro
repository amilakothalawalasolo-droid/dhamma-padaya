---
import MainLayout from '../../layouts/MainLayout.astro';
import bawanaList from '../../data/bawana_list.json';
---

<MainLayout title="භාවනා ක්‍රම">
    
    <div class="mb-6 mt-2 px-2 text-center">
        <h1 class="text-2xl font-bold text-chocolate-900">භාවනා</h1>
        <p class="text-chocolate-600 text-sm mt-1">සිත නිවා ගන්නා සරල භාවනා ක්‍රම</p>
    </div>

    <div class="space-y-4">
        {bawanaList.map((item, index) => (
            <a href={`/bawana/${item.id}`} class="block bg-white p-5 rounded-2xl border border-chocolate-50 shadow-sm active:scale-98 transition-transform group hover:border-chocolate-200">
                <div class="flex items-start gap-4">
                    
                    <div class="w-12 h-12 bg-chocolate-50 rounded-full flex items-center justify-center text-lg font-bold font-serif text-chocolate-700 shrink-0 group-hover:bg-chocolate-100 transition border border-chocolate-100">
                        {String(index + 1).padStart(2, '0')}
                    </div>
                    
                    <div>
                        <h3 class="font-bold text-gray-800 text-lg group-hover:text-chocolate-700 transition">{item.title}</h3>
                        <p class="text-xs text-gray-500 mt-1 leading-relaxed mb-2">{item.desc}</p>
                        
                        <div class="inline-flex items-center gap-1 bg-stone-100 px-2 py-1 rounded text-[10px] text-stone-600 font-medium">
                            ⏳ {item.time}
                        </div>
                    </div>
                </div>
            </a>
        ))}
    </div>

</MainLayout>
